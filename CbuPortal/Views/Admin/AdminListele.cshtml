
@{
    ViewBag.Title = "AkademisyenListele";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model List<CbuPortal.Models.Admin>

<div class="content">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Data Table</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Admin Id</th>
                                    <th>Admin Mail </th>
                                    <th>Şifre</th>
                                    <th>Düzenle</th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>@item.Id</td>
                                        <td>@item.AdminMail</td>
                                        <td>********</td>
                                        <td><a href="/Admin/AdminGoruntule/@item.Id" class="btn btn-warning">Düzenle</a></td>


                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>



        </div>
    </div><!-- .animated -->
</div><!-- .content -->
