    function basariylaEklendi() {
        swal({
            title: "BAŞARILI",
            text: "Duyurunuz Başarıyla Eklendi",
            timer: 3000,
            confirmButtonColor: "#DD6B55",
            confirmButtonText: "Yes, delete it!",
            closeOnConfirm: false
        })
    };
</script>

